{
  "compilerOptions": {
    "declaration": false,
    "module": "es6",
    "noImplicitAny": true,
    "outDir": "./lib",
    "target": "es2017",
    "lib": ["es2017", "dom", "dom.iterable", "scripthost"],
    "moduleResolution": "node",
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", "**/__tests__/*.test.ts"]
}